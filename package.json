{
  "name": "com.barelysufficient.flexit.nordic",
  "version": "0.0.1",
  "private": true,
  "main": "app.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "npm run typecheck && c8 --reporter=text --reporter=lcov mocha --require ts-node/register test/**/*.ts",
    "start": "homey app run --remote",
    "validate": "npm run lint && npm test && homey app validate"
  },
  "dependencies": {
    "bacstack": "0.0.1-beta.14",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/chai": "^5.2.3",
    "@types/homey": "npm:homey-apps-sdk-v3-types",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^21.0.0",
    "@types/source-map-support": "^0.5.10",
    "c8": "^10.1.2",
    "chai": "^6.2.2",
    "eslint": "^7.32.0",
    "eslint-config-athom": "^3.1.5",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-homey-app": "^1.0.2",
    "mocha": "^11.7.5",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  },
  "c8": {
    "check-coverage": true,
    "all": true,
    "include": [
      "lib/**/*.ts",
      "drivers/**/*.ts",
      "app.ts"
    ],
    "exclude": [
      "test/**",
      "**/*.d.ts"
    ],
    "lines": 30,
    "statements": 30,
    "functions": 30,
    "branches": 20
  }
}
