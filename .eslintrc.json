{
  "extends": "athom/homey-app",
  "ignorePatterns": [
    "localdocs/**"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.eslint.json"
    ],
    "tsconfigRootDir": "."
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.eslint.json"
      }
    },
    "node": {
      "version": ">=16.0.0",
      "tryExtensions": [
        ".js",
        ".json",
        ".ts"
      ]
    }
  },
  "rules": {
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "node/no-missing-import": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "homey-app/global-timers": "off",
    "complexity": [
      "error",
      25
    ],
    "max-depth": [
      "error",
      4
    ],
    "max-lines": [
      "error",
      {
        "max": 1000,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-lines-per-function": [
      "error",
      {
        "max": 100,
        "skipBlankLines": true,
        "skipComments": true,
        "IIFEs": true
      }
    ],
    "max-params": [
      "error",
      4
    ],
    "max-statements": [
      "error",
      35
    ]
  },
  "overrides": [
    {
      "files": [
        "scripts/**/*.ts"
      ],
      "rules": {
        "complexity": [
          "error",
          60
        ],
        "max-depth": [
          "error",
          6
        ],
        "max-lines": [
          "error",
          {
            "max": 1700,
            "skipBlankLines": true,
            "skipComments": true
          }
        ],
        "max-lines-per-function": [
          "error",
          {
            "max": 220,
            "skipBlankLines": true,
            "skipComments": true,
            "IIFEs": true
          }
        ],
        "max-params": [
          "error",
          8
        ],
        "max-statements": [
          "error",
          100
        ]
      }
    },
    {
      "files": [
        "test/**/*.ts"
      ],
      "env": {
        "mocha": true
      },
      "rules": {
        "node/no-unpublished-import": "off",
        "complexity": "off",
        "max-depth": "off",
        "max-lines": "off",
        "max-lines-per-function": "off",
        "max-params": "off",
        "max-statements": "off"
      }
    }
  ]
}
