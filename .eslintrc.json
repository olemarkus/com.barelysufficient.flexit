{
  "extends": "athom/homey-app",
  "parserOptions": {
    "project": [
      "./tsconfig.eslint.json"
    ],
    "tsconfigRootDir": "."
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.eslint.json"
      }
    },
    "node": {
      "version": ">=16.0.0",
      "tryExtensions": [
        ".js",
        ".json",
        ".ts"
      ]
    }
  },
  "rules": {
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "node/no-missing-import": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "homey-app/global-timers": "off"
  },
  "overrides": [
    {
      "files": [
        "test/**/*.ts"
      ],
      "env": {
        "mocha": true
      },
      "rules": {
        "node/no-unpublished-import": "off"
      }
    }
  ]
}
